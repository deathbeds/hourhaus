#!/usr/bin/env bash
set -xu

export CONDA_EXE=mamba
export NOW=$(date -Ins)
export TERM=xterm

echo "# NOW: ${NOW}"  >> hourhouse.txt
pip freeze            >> hourhouse.txt

# bau
python -m hourhaus || echo >> ERROR.txt

export THEN=$(date -Ins)
echo "# THEN: ${THEN}" >> hourhouse.txt
pip freeze             >> hourhouse.txt
